#!/bin/bash
set -euo pipefail
CURRENT_DIR=$(dirname "$0")
ROOT_DIR="$(realpath $(dirname "$0")/..)"

ICLOUDPD_VERSION="$(cat "$ROOT_DIR/setup.py" | grep version= | cut -d'"' -f 2)"
echo "Current icloudpd version: ${ICLOUDPD_VERSION}"

cp ./dist/icloudpd* ./icloudpd-latest-py2.py3-none-any.whl
docker build \
  -t "ndbroadbent/icloudpd:${ICLOUDPD_VERSION}" \
  -f "Dockerfile.release" \
  "$ROOT_DIR"

docker tag "ndbroadbent/icloudpd:${ICLOUDPD_VERSION}" "ndbroadbent/icloudpd:${ICLOUDPD_VERSION}-alpine"
docker tag "ndbroadbent/icloudpd:${ICLOUDPD_VERSION}" "ndbroadbent/icloudpd:latest"
